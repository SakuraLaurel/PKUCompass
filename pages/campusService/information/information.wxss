/* pages/campusService/information/information.wxss */
.contact{
  width: 96vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding-left: 1vw;
  padding-right: 1vw;
  margin-left: 1vw;
  margin-right: 1vw;
  margin-bottom: 1vh;
  color: black;
  font-size: 2.5vh;
  line-height: 200%;
  background-color: #fff;
  border: 1rpx solid rgba(0, 0, 0, 0.2);
}
.container{
  width: 96vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left: 2vw;
  margin-right: 2vw;
  margin-bottom: 1vh;
  background-color: #fff;
  border: 1rpx solid rgba(0, 0, 0, 0.2);
}
.title{
  width: 94vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left: 1vw;
  margin-right: 1vw;
  font-size: 2.5vh;
  font-weight: bold;
  line-height: 200%;
  color: black;
}
.content,.picker{
  width: 94vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  text-align: justify;
  margin-left: 1vw;
  margin-right: 1vw;
  font-size: 2.5vh;
  line-height: 200%;
  color: black;
}
.picker{
  margin-top: 1vh;
  margin-bottom: 1vh;
}
.chosen{
  width: 94vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left: 1vw;
  margin-right: 1vw;
  font-size: 2.5vh;
  line-height: 200%;
  color: black;
}