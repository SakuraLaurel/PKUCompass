/* pages/myZone/historyTrack/historyTrack.wxss */
.map{
  width: 96vw;
  height: 50%;
  margin-left: 2vw;
  margin-right: 2vw;
  margin-bottom: 0.5vh;
}
.buttonBox{
  width: 98vw;
  height: 7vh;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-left: 1vw;
  margin-right: 1vw;
}
.button{
  height: 6vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 4vw;
  font-weight: bold;
  background-color: #f6f6f6;
  border: 1rpx solid rgba(0, 0, 0, 0.2);
}
.picker{
  width: 31vw;
  height: 6vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.content{
  width: 94vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  margin-top: 0.5vh;
  margin-left: 2vw;
  margin-right: 2vw;
  margin-bottom: 0.5vh;
  padding-top: 1vw;
  padding-right: 1vw;
  padding-left: 1vw;
  padding-bottom: 1vw;
  font-size: 2.5vh;
  line-height: 150%;
  border: 1rpx solid rgba(0, 0, 0, 0.2);
  text-align: justify;
}
.image{
  width: 96vw;
  margin-left: 2vw;
  margin-right: 2vw;
  margin-bottom: 0.5vh;
}