/* pages/myZone/myZone.wxss */
.map{
  width: 96vw;
  height: 50%;
  margin-left: 2vw;
  margin-right: 2vw;
}
.buttonBox{
  width: 96vw;
  height: 10vh;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-left: 2vw;
  margin-right: 2vw;
}
.button{
  width: 31vw;
  height: 8vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 4vw;
  font-weight: bold;
  margin-left: 1vw;
  background-color: #f6f6f6;
  border: 1rpx solid rgba(0, 0, 0, 0.2);
}
.navigatorBox{
  width: 96vw;
  height: 36vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  margin-left: 2vw;
  margin-right: 2vw;
}
.navigator{
  width: 100%;
  height: 7.5vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 4vh;
  font-weight: bold;
  color: #007aff;
  background-color: #fff;
  border-top: 1rpx solid rgba(0, 0, 0, 0.2);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
}